@model IEnumerable<MasterDetails.Models.Detail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Master)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Master.MasterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.ProdutoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
