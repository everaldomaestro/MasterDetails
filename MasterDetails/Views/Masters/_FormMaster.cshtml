@model MasterDetails.Models.Master

<div class="form-group">
    <label asp-for="Data" class="control-label"></label>
    <input asp-for="Data" class="form-control" />
    <span asp-validation-for="Data" class="text-danger"></span>
</div>

<div class="row">
    <input type="hidden" id="Index" value="" />
    <input type="hidden" id="DetailId" value="" />
    <div class="form-group col-12 col-md-6 align-self-start">
        <label for="ProdutoId">Produto</label>
        <select class="form-control" id="ProdutoId" asp-items="ViewBag.Produtos">
            <option value=""></option>
        </select>
    </div>
    <div class="form-group col-12 col-md-3 col-lg-3 align-self-md-center">
        <label for="Qtd">Qtd</label>
        <input class="form-control" id="Qtd" />
    </div>
    <div class="form-group col-12 col-md-3 col-lg-3 align-self-end">
        <button type="button" class="btn btn-secondary btn-add-produto p-md-2 float-md-right">Adicionar Produto</button>
    </div>
    <span asp-validation-for="Details" class="text-danger ml-3"></span>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Qtd</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="table-produto">
        @if (Model != null)
        {
            if (Model.Details != null)
            {
                @for (int i = 0; i < Model.Details.Count(); i++)
                {
                    <tr>
                        <td class="nomeProduto">
                            @Model.Details[i].Produto.Nome
                        </td>
                        <td class="qtdProduto">
                            @Model.Details[i].Qtd
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-rm-produto" value="@i">Remover Produto</button>
                            <button type="button" class="btn btn-primary btn-edit-produto" value="@i">Editar Produto</button>
                            <input type="hidden" asp-for="Details[i].DetailId" />
                            <input type="hidden" asp-for="Details[i].MasterId" />
                            <input type="hidden" asp-for="Details[i].ProdutoId" />
                            <input type="hidden" asp-for="Details[i].Qtd" />
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>