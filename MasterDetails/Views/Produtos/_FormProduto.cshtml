@model MasterDetails.Models.Produto
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PrecoFormatado" class="control-label"></label>
    <input asp-for="PrecoFormatado" class="form-control moeda" onkeyup="formatarQtd(this)" />
    <span asp-validation-for="PrecoFormatado" class="text-danger"></span>
</div>
